<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_134sdp"
            android:layout_height="@dimen/_150sdp"
            app:cardBackgroundColor="#EFF0F3"
            app:cardCornerRadius="@dimen/_16sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shoes"/>
                <ImageView
                    android:id="@+id/img_add_to_fav"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:src="@drawable/add_to_fav"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adidas Yeezy Boost 700"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:maxLines="1"
            android:fontFamily="@font/opensans_semi_bold"
            android:layout_marginVertical="@dimen/_10sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/half_star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="@dimen/_12sdp"
                android:textColor="#676767"
                android:fontFamily="@font/opensans_semi_bold"
                android:layout_marginStart="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="@dimen/_15sdp"
                android:textColor="#676767"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/opensans_semi_bold"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#F1F2F6"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,379 sold"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_semi_bold"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/txtProduct_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$149.99"
            android:textColor="#FF8108"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/opensans_semi_bold"
            android:layout_marginVertical="@dimen/_10sdp"
            />
    </LinearLayout>
</LinearLayout>