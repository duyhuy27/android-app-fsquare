<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#535861">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_cardview_top_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Review"
                android:textSize="@dimen/_24sdp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/_10sdp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginHorizontal="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_102sdp"
                        android:layout_height="@dimen/_102sdp"
                        app:cardBackgroundColor="#EFF0F3"
                        app:cardCornerRadius="@dimen/_16sdp">
                            <ImageView
                                android:id="@+id/img_product"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/shoes"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adidas Yeezy Boost 700"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/opensans_semi_bold"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="@dimen/_5sdp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Red"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_semi_bold"
                                android:textColor="#676767"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_semi_bold"
                                android:textColor="#676767"
                                android:layout_marginHorizontal="@dimen/_3sdp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Size = 42"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_semi_bold"
                                android:textColor="#676767"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_semi_bold"
                                android:textColor="#676767"
                                android:layout_marginHorizontal="@dimen/_3sdp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Qty = 1"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_semi_bold"
                                android:textColor="#676767"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$149.99"
                            android:textColor="#FF8108"
                            android:textSize="@dimen/_16sdp"
                            android:fontFamily="@font/opensans_semi_bold"
                            />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/How_is_your_order"
                android:textColor="@color/black"
                android:textSize="@dimen/_22sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Please_give_your_rating_and_also_your_review"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="#676767"
                android:gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_10sdp">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/outline_star"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/outline_star"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/outline_star"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/outline_star"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/outline_star"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Add_image"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonBorderOrange"
                    android:drawableTop="@drawable/image"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Add_video"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonBorderOrange"
                    android:drawableTop="@drawable/video"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <vn.md18.fsquareapplication.utils.view.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Reset"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonGuest"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Apply"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonApp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>