<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp">
        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/img_main_home"
            android:background="@drawable/image_cart_custom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txt_product_name_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIKE Run Swift 2"
                    android:textSize="14dp"
                    android:textColor="#040207"
                    android:fontFamily="@font/opensans_semi_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/circle_red"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_product_color_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:textSize="12dp"
                    android:textColor="#676767"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/opensans_semi_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="16dp"
                    android:textColor="#676767"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_product_size_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size = 42"
                    android:textSize="12dp"
                    android:textColor="#676767"
                    android:fontFamily="@font/opensans_semi_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="16dp"
                    android:textColor="#676767"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_product_quantity_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty = 1"
                    android:textSize="12dp"
                    android:textColor="#676767"
                    android:fontFamily="@font/opensans_semi_bold"/>
            </LinearLayout>
                <TextView
                    android:id="@+id/txt_product_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$126.99"
                    android:textSize="16dp"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerify"
                android:layout_width="100dp"
                android:layout_height="@dimen/size_40"
                android:text="@string/Cancel"
                android:background="@drawable/bg_button_cancel"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="end"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>