<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_14"
    android:layout_marginTop="@dimen/size_8"
    android:layout_marginEnd="@dimen/size_14"
    android:layout_marginBottom="@dimen/size_10"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="@dimen/size_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70">

        <androidx.cardview.widget.CardView
            android:id="@+id/v_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_marginStart="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            app:cardBackgroundColor="@color/gray_5"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/v_content"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_marginStart="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_14"
            app:cardBackgroundColor="@color/gray_5"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_title" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/size_10"
            android:layout_marginStart="@dimen/size_14"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_14"
            app:cardBackgroundColor="@color/gray_5"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>