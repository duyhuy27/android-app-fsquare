<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#535861">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_cardview_top_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Filter"
                android:textSize="@dimen/_24sdp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/_10sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Categories"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginVertical="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/All"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adidas"
                        android:drawableStart="@drawable/adidas_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nike"
                        android:drawableStart="@drawable/nike_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puma"
                        android:drawableStart="@drawable/puma_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fila"
                        android:drawableStart="@drawable/fila_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vans"
                        android:drawableStart="@drawable/vans_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reebok"
                        android:drawableStart="@drawable/reebok_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Converse"
                        android:drawableStart="@drawable/converse_grey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Gender"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginVertical="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/All"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Man"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Women"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Price"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/priceRangeSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="10"
                android:thumbTint="@color/black"
                app:values="@array/default_range"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Gender"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginVertical="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Popular"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Newest_shoes"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Special"
                        android:textSize="@dimen/_14sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Rating"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/opensans_semi_bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginVertical="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/All"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/star"
                        style="@style/ButtonFilter"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Reset"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonGuest"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Apply"
                    android:textSize="@dimen/_16sdp"
                    style="@style/ButtonApp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>