<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="15dp">
        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:padding="15dp"
            android:src="@drawable/img_main_home"
            android:background="@drawable/image_cart_custom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/txt_product_name_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="NIKE Run Swift 2"
                    android:textSize="14dp"
                    android:textColor="#040207"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/btn_product_delete_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete"
                    android:background="@drawable/image_cart_custom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
               <TextView
                   android:id="@+id/txt_product_color_cart"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Red"
                   android:textSize="12dp"
                   android:textColor="#676767"
                   android:layout_marginLeft="5dp"
                   android:fontFamily="@font/opensans_semi_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="16dp"
                    android:textColor="#676767"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <TextView
                    android:id="@+id/txt_product_size_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size = 42"
                    android:textSize="12dp"
                    android:textColor="#676767"
                    android:fontFamily="@font/opensans_semi_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/txt_product_price_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="$126.99"
                    android:textSize="16dp"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end">
                    <ImageView
                        android:id="@+id/btn_product_minus_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/minus"
                        android:background="@drawable/image_cart_button_bg"/>
                <TextView
                    android:id="@+id/txt_product_quantity_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#333333"
                    android:fontFamily="@font/opensans_bold"/>
                    <ImageView
                        android:id="@+id/btn_product_plus_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/plus"
                        android:background="@drawable/image_cart_button_bg"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
</androidx.cardview.widget.CardView>