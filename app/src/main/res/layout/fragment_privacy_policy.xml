<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.profileandsetting.ui.fragment.PrivacyPolicyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Custom toolbar -->
        <vn.md18.fsquareapplication.utils.view.CustomToolbar
            android:id="@+id/toolbarPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleToolbar="Chính sách &amp; điều khoản"
            app:textStyle="bold"/>

        <!-- Bọc nội dung bên trong ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/permission_dp_20">

                <!-- Nội dung văn bản -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:text="Chào mừng bạn đến với ứng dụng bán giày của chúng tôi! Chúng tôi cam kết mang đến cho khách hàng những sản phẩm giày chất lượng cao, phong cách đa dạng và dịch vụ tốt nhất. Chính sách dưới đây giúp đảm bảo quyền lợi của bạn khi sử dụng dịch vụ."
                    android:textColor="#676767"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:text="Chính sách đổi trả: Khách hàng có thể đổi trả sản phẩm trong vòng 7 ngày kể từ ngày nhận hàng, với điều kiện sản phẩm còn nguyên vẹn, chưa qua sử dụng và đầy đủ hộp cùng hóa đơn. Vui lòng liên hệ với bộ phận hỗ trợ để được hướng dẫn chi tiết."
                    android:textColor="#676767"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="@dimen/permission_dp_20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:text="Chính sách bảo hành: Chúng tôi bảo hành sản phẩm trong vòng 30 ngày với các lỗi kỹ thuật từ nhà sản xuất. Để được hỗ trợ bảo hành, vui lòng cung cấp hóa đơn mua hàng và ảnh sản phẩm lỗi."
                    android:textColor="#676767"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="@dimen/permission_dp_20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:text="Chính sách vận chuyển: Chúng tôi cung cấp dịch vụ giao hàng trên toàn quốc. Thời gian giao hàng từ 3 đến 7 ngày làm việc, tùy thuộc vào địa chỉ giao hàng. Phí vận chuyển sẽ được hiển thị trong quá trình đặt hàng."
                    android:textColor="#676767"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="@dimen/permission_dp_20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semi_bold"
                    android:text="Chính sách bảo mật: Thông tin cá nhân của khách hàng sẽ được bảo mật tuyệt đối và chỉ sử dụng cho mục đích cung cấp dịch vụ. Chúng tôi cam kết không chia sẻ thông tin khách hàng với bên thứ ba mà không có sự đồng ý của bạn."
                    android:textColor="#676767"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="@dimen/permission_dp_20"/>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
