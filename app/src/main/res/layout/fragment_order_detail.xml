<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f6"
    tools:context=".features.checkout.ui.fragment.OrderDetailFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <vn.md18.fsquareapplication.utils.view.CustomToolbar
           android:id="@+id/toolbarCheckout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:titleToolbar="Đặt hàng"
           app:textStyle="bold"/>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="none"
           android:fillViewport="true">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <!-- Địa chỉ -->
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/Address"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:textSize="18sp"
                   android:textColor="#333333"
                   android:layout_marginLeft="20dp"/>

               <!-- Include address layout -->
               <include
                   android:id="@+id/item_checkout_address"
                   layout="@layout/item_checkuot_address" />

               <!-- Order list title -->
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/Order_List"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:textSize="18sp"
                   android:textColor="#333333"
                   android:layout_marginLeft="20dp"/>

               <!-- RecyclerView for order list -->
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rcv_product_cart"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                   tools:listitem="@layout/item_order_list_checkout" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/Chose_Shipping"
                   android:fontFamily="@font/montserrat_semi_bold"
                   android:textSize="18sp"
                   android:layout_marginTop="10dp"
                   android:textColor="#333333"
                   android:layout_marginLeft="20dp"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="10dp">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/shipping_cart"
                       android:layout_marginBottom="5dp"
                       />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Chose_Shipping_Type"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    />
               </LinearLayout>

               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Thanh toán khi nhận hàng"
                           android:textSize="18sp"
                           android:textColor="#333333"
                           android:layout_weight="1"
                           />
                       <RadioButton
                           android:id="@+id/rdoCash"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/primary"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="10dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Thanh toán qua Baokim"
                           android:textSize="18sp"
                           android:textColor="#333333"
                           android:layout_weight="1"
                           />
                       <RadioButton
                           android:id="@+id/rdoBaokim"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/primary"/>
                   </LinearLayout>
               </RadioGroup>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="@dimen/_10sdp"
                   app:cardElevation="0dp"
                   android:background="#fff"
                   android:layout_marginHorizontal="20dp"
                   android:padding="16dp"
                   android:layout_marginBottom="20dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="16dp"
                       android:background="#fff"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingVertical="10dp"
                           >
                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/Amount"
                               android:layout_weight="1"
                               android:textColor="#333333"/>
                           <TextView
                               android:id="@+id/txt_amuont_checkout"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="$1,458.28"
                               android:textSize="16dp"
                               android:fontFamily="@font/montserrat_semi_bold"
                               android:textColor="#333333"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingVertical="10dp"
                           >
                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/Shipping"
                               android:layout_weight="1"
                               android:textColor="#333333"/>
                           <TextView
                               android:id="@+id/txt_shipping_checkout"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="-"
                               android:textSize="16dp"
                               android:fontFamily="@font/montserrat_semi_bold"
                               android:textColor="#333333"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="#CCCCCC"
                           android:layout_marginTop="8dp"
                           android:layout_marginBottom="8dp"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:paddingVertical="10dp"
                           >
                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:text="@string/Total"
                               android:layout_weight="1"
                               android:textColor="#333333"/>
                           <TextView
                               android:id="@+id/txt_total_checkout"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="$1,458.28"
                               android:textSize="16dp"
                               android:fontFamily="@font/montserrat_semi_bold"
                               android:textColor="#333333"/>
                       </LinearLayout>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

               <!-- Checkout button -->
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/btn_continue"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/Continue_to_Payment"
                   android:layout_marginBottom="@dimen/permission_dp_40"
                   android:layout_marginLeft="@dimen/permission_dp_20"
                   android:layout_marginRight="@dimen/permission_dp_20"
                   style="@style/ButtonApp"/>

           </LinearLayout>
       </ScrollView>
   </LinearLayout>

</FrameLayout>