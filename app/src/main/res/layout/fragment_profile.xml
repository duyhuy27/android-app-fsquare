<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.main.ui.fragment.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/permission_dp_20"
            android:layout_marginTop="@dimen/permission_dp_20">
            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Profile"
                android:textSize="@dimen/_20ssp"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:fontFamily="@font/opensans_semi_bold"
                />
            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_more"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/permission_dp_20"
            android:layout_marginTop="@dimen/permission_dp_20">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/_88sdp"
                    android:layout_height="@dimen/_88sdp"
                    android:src="@drawable/avatar"
                    />

                <ImageView
                    android:id="@+id/btn_edit_avatar"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:src="@drawable/edit_avatar"
                    android:layout_alignBottom="@+id/avatar"
                    android:layout_alignRight="@+id/avatar"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="Congue Egestas"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/opensans_semi_bold"
                    />
                <TextView
                    android:id="@+id/txt_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="098-4892-489"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/opensans_regular"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginHorizontal="@dimen/permission_dp_20"
            android:layout_marginTop="@dimen/permission_dp_30"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_16sdp"

            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/permission_dp_20"
                android:padding="@dimen/_6sdp"
                >
                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/user"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Edit_Profile"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/address"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Address"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/noti"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Notification"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/security"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Security"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/privacy"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Privacy_Policy"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_6sdp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/logout"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Logout"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/holo_red_light"
                        android:gravity="start"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</FrameLayout>