<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".features.main.ui.fragment.fragment_enum_order.EnumOrderFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <!-- Adding 15 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />

            <include layout="@layout/item_order_placeholder" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_product_order"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imgNoOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="140dp"
        android:src="@drawable/ic_no_order"
        android:visibility="gone"
     />

</FrameLayout>
