<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <vn.md18.fsquareapplication.utils.view.CustomToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleToolbar="Top Up E-Wallet"
            app:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Enter_the_amount_of_top_up"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#040207"
            android:layout_margin="20dp"/>
        <EditText
            android:id="@+id/edt_mony_payment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="$800"
            android:textColorHint="#333333"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edittext_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$10"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$20"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$50"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext_background"
                android:layout_margin="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$100"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$200"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$300"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext_background"
                android:layout_margin="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$500"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$500"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="$2,000"
                android:textSize="16sp"
                android:textColor="#5A567D"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext_background"
                android:layout_margin="20dp"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_new_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Continue"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/permission_dp_20"
            android:layout_marginRight="@dimen/permission_dp_20"
            style="@style/ButtonApp"/>

    </LinearLayout>

</FrameLayout>