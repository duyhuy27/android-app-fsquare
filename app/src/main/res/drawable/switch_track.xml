<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#FFA500"/> <!-- Màu cam khi bật -->
            <corners android:radius="20dp"/> <!-- Bo tròn góc -->
        </shape>
    </item>

    <!-- Khi tắt (unchecked) -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="#B0BEC5"/> <!-- Màu xám khi tắt -->
            <corners android:radius="20dp"/> <!-- Bo tròn góc -->
        </shape>
    </item>
</selector>