<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:statusBarColor">@color/dark_blue_1</item>
    </style>

    <!-- App theme fullscreen have status bar-->
    <style name="AppTheme.FullScreen.LightStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/light_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Font Regular -->
    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_regular.ttf</item>
    </style>


    <!-- Font Regular Bold-->
    <style name="TextAppearance.Text.Regular.Bold" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_regular.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Font Bold -->
    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_bold.ttf</item>
    </style>

    <!-- Font Semi Bold -->
    <style name="TextAppearance.Text.SemiBold" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_semi_bold.ttf</item>
    </style>


    <!-- Font Light -->
    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_light.ttf</item>
    </style>

    <!-- Font Italic -->
    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontFamily">fonts/open_sans/opensans_italic.ttf</item>
    </style>

    <style name="DialogTheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <!-- Custom Activity Animation -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- text normal blue dark  -->
    <style name="TextNormalBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!-- text normal bold blue dark  -->
    <style name="TextNormalBoldBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular.Bold</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!-- text title semi bold blue dark  -->
    <style name="TextTitleSemiBoldBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.SemiBold</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!-- text title semi bold grey_light  -->
    <style name="TextTitleSemiBoldGreyLight" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.SemiBold</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/grey_light_text</item>
    </style>
    <!-- text title blue dark  -->
    <style name="TextTitleNormalGreyLight" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/grey_light_text</item>
    </style>

    <!-- text title Grey bold light  -->
    <style name="TextTitleGreyBoldLight" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/grey_light_text</item>
    </style>

    <style name="TextHeaderNormalBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="TextHeaderBoldBlueDark" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!-- Input style for edittext -->
    <style name="InputStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="hintTextColor">@color/grey_light_text</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- Button Blue => using set style= @Style/ButtonBlue -->
    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextTitleSemiBoldBlueDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_button_corner_30_blue</item>
    </style>

    <style name="ButtonGuest" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextTitleSemiBoldBlueDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_button_corner_30_gray</item>
    </style>

    <style name="ButtonApp" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextTitleSemiBoldBlueDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_button_corner_30_primary</item>
    </style>

    <!-- Button Button Border Red => using set style= @Style/ButtonBorderRed -->
    <style name="ButtonBorderRed" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextTitleSemiBoldBlueDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_button_corner_30_red</item>
    </style>

    <style name="AppThemeNew.DialogTheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <!-- Style cardview -->
    <style name="CardViewBorder" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/size_8</item>
        <item name="cardCornerRadius">@dimen/size_14</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Style switch -->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/light_blue </item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_88</item>

        inactive track color (30% transparency)
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>
